<% if @errors %>
  <% @errors.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<h1>Update an Employee </h1>
<%= form_for @employee do |f| %>
    <p><%= f.label "First Name:" %></p>
    <%= f.text_field :first_name %>
    <p><%= f.label "Last Name:" %></p>
    <%= f.text_field :last_name %>
    <p><%= f.label "Alias:" %></p>
    <%= f.text_field :alias %>
    <p><%= f.label "Title:" %></p>
    <%= f.text_field :title %>
    <p><%= f.label "Office:" %></p>
    <%= f.text_field :office %>
    <p><%= f.label "Image url:" %></p>
    <%= f.text_field :img_url %>
    <p><%= f.label "Select Dog:" %></p>
    <%= collection_select(:employee, :dog_id, @dogs, :id, :name) %>
    <p><%= f.submit %></p>
<% end %>